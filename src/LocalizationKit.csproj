<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <RootNamespace>AlastairLundy.LocalizationKit</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>LocalizationKit</Title>
        <Authors>AlastairLundy</Authors>
        <Description>Make Localizations in .NET easy.</Description>
        <Copyright>Copyright (c) 2021-2024 Alastair Lundy</Copyright>
        <RepositoryUrl>https://github.com/alastairlundy/LocalizationKit</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReleaseNotes>### Changes since 5.1.0
* Update SettingsKit from 5.0.0 to 5.0.1
* Allow usage of Locale with only a LanguageCode without providing a CountryCode - This would previously have caused an exception
* Fixed an issue where Locale without a CountryCode would return an incorrect string from the ToString() method</PackageReleaseNotes>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <AssemblyVersion>5.1.0.0</AssemblyVersion>
        <FileVersion>5.1.1.0</FileVersion>
        <Version>5.1.1</Version>
        <PackageVersion>5.1.1</PackageVersion>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <LangVersion>default</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <TargetFramework>net6.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
      <None Include="..\LICENSE.md">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
        <None Include="../README.md" Pack="true" PackagePath="\" />
      <None Remove="LocalizationKitTest\**" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="LocalizationKitTest\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="LocalizationKitTest\**" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
      <PackageReference Include="SettingsKit" Version="5.1.0" />
    </ItemGroup>

</Project>
