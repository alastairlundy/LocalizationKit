<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <RootNamespace>AluminiumTech.DevKit.LocalizationKit</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>LocalizationKit</Title>
        <Authors>AluminiumTech</Authors>
        <Description>Make Localizations in .NET easy and less painful. </Description>
        <Copyright>Copyright (c) 2021</Copyright>
        <RepositoryUrl>https://gitlab.com/aluminiumtechdevkit/LocalizationKit</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReleaseNotes>### Changes
* Updated SettingsKit dep from 3.0.0 to 3.1.0
* Updated code in LocalizationKit to be compatible with SettingsKit 3.1.0</PackageReleaseNotes>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <AssemblyVersion>3.1.0.0</AssemblyVersion>
        <FileVersion>3.1.0.0</FileVersion>
        <Version>3.1.0</Version>
        <PackageVersion>3.1.0</PackageVersion>
        <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
        <TargetFrameworks>net5.0;net6.0;netcoreapp3.1;netstandard2.0</TargetFrameworks>
        <LangVersion>default</LangVersion>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="SettingsKit" Version="3.1.0" />
    </ItemGroup>

    <ItemGroup>
      <None Include="..\LICENSE.md">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
        <None Include="../README.md" Pack="true" PackagePath="\" />
      <None Remove="LocalizationKitTest\**" />
    </ItemGroup>

    <ItemGroup>
      <Compile Remove="LocalizationKitTest\**" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Remove="LocalizationKitTest\**" />
    </ItemGroup>

</Project>
